{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2019",
    "allowJs": false,
    "strict": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "outDir": "dist",
    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "./src",
    "babel.config.js",
    "jest.config.js",
    "jest.coverage.config.js",
    "webpack.*.config.js",
    "./tests",
    "__fixtures__",
    "__mocks__"
  ]
}
