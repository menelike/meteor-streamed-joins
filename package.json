{
  "name": "meteor-streamed-joins",
  "version": "0.0.1",
  "description": "code quality base bundle",
  "main": "index.js",
  "scripts": {
    "lint": "eslint . --ext .ts,.js",
    "prettier:check": "prettier --check 'src/**/*.ts'",
    "prettier:write": "prettier --write 'src/**/*.ts'",
    "test:unit": "jest test --config jest.config.js",
    "test:watch": "jest test --watch --config jest.config.js",
    "test:coverage": "jest test --coverage --config jest.coverage.config.js",
    "build": "babel --delete-dir-on-start src --out-dir lib --extensions '.ts' --ignore '**/*.test.ts'"
  },
  "files": [
    "index.js"
  ],
  "author": "Human Ashrafi",
  "license": "UNLICENSED",
  "repository": "git@github.com:menelike/meteor-streamed-joins.git",
  "dependencies": {
    "@babel/cli": "^7.10.5"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@babel/runtime": "^7.10.5",
    "@types/jest": "^26.0.4",
    "@types/meteor": "^1.4.47",
    "@types/mongodb": "^3.5.25",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "eslint": "^7.4.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.18.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "mongodb": "^3.5.9",
    "mongodb-memory-server": "^6.6.1",
    "prettier": "^2.0.5",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": "eslint"
  }
}
